{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es6",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],
    "lib": ["es2017", "dom", "esnext.asynciterable", "esnext"],
    "skipLibCheck": false,
    "skipDefaultLibCheck": false,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist/",
    "pretty": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "benchmark/**/*.ts"],
  "exclude": ["node_modules", "tmp"]
}
